        <!--            android:id="@+id/btn_dialogue"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="20dp"-->
        <!--            android:text="@string/dialogue_title" />-->

    </LinearLayout>

</layout>